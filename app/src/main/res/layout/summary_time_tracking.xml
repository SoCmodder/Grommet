<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/session_summary_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/label_time_tracking"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/summary_clock_in_time"
        style="@android:style/TextAppearance.Material.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:drawablePadding="@dimen/detail_horizontal_padding"
        android:drawableStart="@drawable/ic_timer_black_24dp"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        tools:text="6:30 am"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/vertical_ellipses"/>

    <TextView
        android:id="@+id/summary_clock_out_time"
        style="@android:style/TextAppearance.Material.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:drawablePadding="@dimen/detail_horizontal_padding"
        android:drawableStart="@drawable/ic_timer_off_black_24dp"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        tools:text="1:30 pm"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/vertical_ellipses"/>

    <TextView
        android:id="@+id/summary_total_time"
        style="@android:style/TextAppearance.Material.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:drawablePadding="@dimen/detail_horizontal_padding"
        android:drawableStart="@drawable/ic_timelapse_black_24dp"
        android:gravity="center"
        android:textColor="@color/colorSecondaryText"
        android:textStyle="bold"
        tools:text="7 hours"/>

</LinearLayout>