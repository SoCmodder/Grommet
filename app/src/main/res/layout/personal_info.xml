<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/increment"
            android:background="?attr/colorPrimary"/>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/card_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/increment">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:paddingBottom="@dimen/detail_vertical_padding"
                android:useDefaultMargins="false">

                <TextView
                    android:id="@+id/textview_title"
                    style="@style/Grommet.Content_Area"
                    android:layout_height="@dimen/increment"
                    android:layout_columnSpan="2"
                    android:text="@string/section_label_personal_info"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    />

                <View
                    style="@style/Grommet.Divider"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="2"/>

                <TextView
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="2"
                    android:layout_height="@dimen/title_height"
                    android:text="@string/section_label_name"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_columnWeight=".7"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="@dimen/content_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_item_height"
                        android:hint="@string/label_first_name"
                        android:inputType="textPersonName"/>

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_title"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_columnWeight=".3"
                    android:layout_gravity="fill_horizontal|bottom"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="@dimen/content_margin"/>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="@dimen/content_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_item_height"
                        android:hint="@string/label_last_name"
                        android:inputType="textPersonName"/>

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_suffix"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_gravity="fill_horizontal|bottom"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="@dimen/content_margin"/>

                <View
                    style="@style/Grommet.Divider"
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_columnSpan="2"/>

                <TextView
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_columnSpan="2"
                    android:layout_height="@dimen/title_height"
                    android:text="@string/section_label_address"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="@dimen/content_margin"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_street"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_item_height"
                        android:hint="@string/label_street"
                        android:inputType="textPostalAddress"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginEnd="@dimen/content_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_zip_code"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_item_height"
                        android:hint="@string/label_zip_code"
                        android:inputType="number"
                        android:maxEms="5"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginStart="@dimen/content_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_item_height"
                        android:hint="@string/label_phone"
                        android:inputType="phone"/>

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_phone_type"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_gravity="fill_horizontal|bottom"
                    android:layout_marginEnd="@dimen/content_margin"
                    android:layout_marginBottom="3dp"/>

            </GridLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>


</android.support.v4.widget.NestedScrollView>