<?xml version="1.0" encoding="utf-8"?>


<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:columnCount="2"
    android:useDefaultMargins="true"
    >


    <TextView
        android:layout_height="@dimen/list_item_height"
        android:layout_marginStart="@dimen/content_margin"
        android:gravity="bottom"
        android:paddingBottom="@dimen/content_area_padding"
        android:paddingTop="@dimen/content_area_padding"
        android:text="@string/section_label_race"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        />

    <Spinner
        android:id="@+id/spinner_race"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginEnd="@dimen/content_margin"
        android:layout_marginTop="11dp"
        android:paddingBottom="@dimen/content_area_padding"
        android:paddingTop="@dimen/content_area_padding"
        />

    <TextView
        android:layout_height="@dimen/list_item_height"
        android:layout_marginStart="@dimen/content_margin"
        android:gravity="bottom"
        android:paddingBottom="@dimen/content_area_padding"
        android:paddingTop="@dimen/content_area_padding"
        android:text="@string/section_label_party"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        />


    <Spinner
        android:id="@+id/spinner_party"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_marginEnd="@dimen/content_margin"
        android:layout_marginTop="11dp"
        android:paddingBottom="@dimen/content_area_padding"
        android:paddingTop="@dimen/content_area_padding"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_preferred_language"
        android:layout_width="0dip"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="@dimen/content_margin"
        android:layout_marginStart="@dimen/content_margin"
        android:paddingBottom="@dimen/content_area_padding"
        android:paddingTop="@dimen/content_area_padding"
        app:errorEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/preferred_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_preferred_language"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/drivers_license_checkbox"
        android:layout_columnSpan="2"
        android:layout_marginStart="@dimen/content_margin"
        android:paddingBottom="@dimen/content_area_padding"
        android:paddingTop="@dimen/content_area_padding"
        android:text="@string/label_has_drivers_license"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_drivers_license"
        android:layout_width="0dip"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="@dimen/content_margin"
        android:layout_marginStart="@dimen/content_margin"
        android:visibility="gone" app:errorEnabled="true"
        tools:visibility="visible">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/drivers_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_drivers_license_id"
            android:inputType="date"/>

    </android.support.design.widget.TextInputLayout>


</GridLayout>
