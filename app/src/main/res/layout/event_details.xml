<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_backdrop_height"
    >
    <com.rockthevote.grommet.ui.misc.BetterViewAnimator
        android:id="@+id/ed_animator"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/static_details"
            layout="@layout/event_details_static"/>

        <include
            android:id="@+id/editable_details"
            layout="@layout/event_details_editable"/>

    </com.rockthevote.grommet.ui.misc.BetterViewAnimator>
</FrameLayout>