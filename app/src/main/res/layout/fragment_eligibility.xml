<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/detail_vertical_padding">

    <TextView
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/increment"
        android:text="@string/section_label_new_registrant"
        android:textAppearance="@android:style/TextAppearance.Material.Title"/>

    <View
        style="@style/Grommet.Divider"
        android:layout_width="match_parent"/>

    <TextView
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:text="@string/section_label_basic_info"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_email"
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:hint="@string/label_email"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/checkbox_can_receive_email"
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_receive_email"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_birthday"
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:focusable="false"
            android:hint="@string/label_birthday"
            android:inputType="date"/>

    </android.support.design.widget.TextInputLayout>

    <View
        style="@style/Grommet.Divider"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/textview_title"
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:text="@string/section_label_eligibility"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"/>

    <CheckBox
        android:id="@+id/checkbox_is_us_citizen"
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:text="@string/label_us_citizen"/>

    <CheckBox
        android:id="@+id/checkbox_is_eighteen"
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:text="@string/label_eighteen_or_older"/>

    <CheckBox
        android:id="@+id/checkbox_first_time"
        style="@style/Grommet.Content_Area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:text="@string/label_first_time_voter"/>

</LinearLayout>

