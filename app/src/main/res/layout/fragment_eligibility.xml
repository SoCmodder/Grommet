<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/increment"
            android:background="?attr/colorPrimary"/>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/card_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/increment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/detail_vertical_padding">

                <TextView
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/increment"
                    android:text="@string/section_label_new_registrant"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"/>

                <View
                    style="@style/Grommet.Divider"
                    android:layout_width="match_parent"/>

                <TextView
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:text="@string/section_label_basic_info"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                    />

                <android.support.design.widget.TextInputLayout
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/label_email"
                        android:inputType="textEmailAddress"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_marginBottom="40dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:hint="@string/label_birthday"
                        android:inputType="date"/>

                </android.support.design.widget.TextInputLayout>

                <View
                    style="@style/Grommet.Divider"
                    android:layout_width="match_parent"/>

                <TextView
                    android:id="@+id/textview_title"
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:text="@string/section_label_eligibility"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead"/>

                <CheckBox
                    android:id="@+id/checkbox_is_us_citizen"
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:text="@string/label_us_citizen"/>

                <CheckBox
                    android:id="@+id/checkbox_is_eighteen"
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:text="@string/label_eighteen_or_older"/>

                <CheckBox
                    android:id="@+id/checkbox_has_id"
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:text="@string/label_has_id"/>

                <CheckBox
                    android:id="@+id/checkbox_first_time"
                    style="@style/Grommet.Content_Area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:text="@string/label_first_time_voter"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>