<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_info_gridlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:paddingBottom="@dimen/detail_vertical_padding"
    android:useDefaultMargins="false">

    <View
        style="@style/Grommet.Divider"
        android:layout_width="match_parent"
        android:layout_columnSpan="2"/>

    <TextView
        android:id="@+id/name_section_title"
        style="@style/Grommet.Content_Area"
        android:layout_height="@dimen/increment"
        android:layout_columnSpan="2"
        tools:text="@string/section_label_personal_info"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_columnWeight=".7"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="@dimen/content_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_first_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:hint="@string/label_first_name"
            android:inputType="textPersonName"/>

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_columnWeight=".3"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="@dimen/content_margin"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="@dimen/content_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_last_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:hint="@string/label_last_name"
            android:inputType="textPersonName"/>

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_suffix"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="@dimen/content_margin"/>

</GridLayout>